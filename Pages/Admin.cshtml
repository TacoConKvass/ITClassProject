@page "/admin"
@model ITClassProject.Pages.AdminModel
@{
	bool Admin = ITClassProject.Admin.GetInstance().isAdmin;
	ViewData["Title"] = "Admin";
	Layout = "_Layout";
	if (Admin)
	{
		Layout = "_AdminLayout";
	}
}

@{
	if (Admin) {
		<main id="main-content">
			<div id="admin-explanation">
				<p>
					This is and admin page <br>
					Congratulations! <br>
					You have found it! <br>
					Now go away.
				</p>
			</div>

			<div id="search-user">
				<form method="post">
					<label>Delete user</label><br>
					<input type="number" id="userId" name="userId"><br>
					<input type="submit" value="Submit user Id" class="submit-button"><br>
					@Html.AntiForgeryToken()
				</form>
			</div>
		</main>
	}
	else {
		<main id="main-content">
			<div id="no-access">
				<h1 id="no-access">You do not have access to this page</h1>
			</div>
		</main>
	}
}